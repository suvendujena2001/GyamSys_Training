@{
}
@model List<Category>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill">Create New Ctaegory</i>
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category
        </th>
        <th>
            DisplayOrder
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
        <td>@obj.Name</td>
        <td>@obj.DisplayOrder</td>
        <td>
            <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-controller="Category"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>
            </div>
        </td>
            </tr>
        }
       
  
    </tbody>
       
 </table>

    
  
</div>