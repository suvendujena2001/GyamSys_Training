
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product List";
}
<h3>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create New Product</a>
</h3>
<table class="table table-bordered table-responsive table-hover">   

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories.Name)
            </th>
            <th>
                Action
            </th>

            
        </tr>
    </thead>

    <tbody>

        @if(Model != null && Model.Any())
        {
            @foreach(var product in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model=>product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => product.Price)
                    </td>   
                    <td>
                        @Html.DisplayFor(model => product.Qty)
                    </td>
                    <td>
                        @Html.DisplayFor(model => product.Categories.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-success btn-sm">Edit</a>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-success btn-sm">Delete</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td colspan="5">

                    <div>
                        Product is not available in database.
                    </div>
                    
                </td>
            </tr>
        }

    </tbody>

</table>
