@{
    var students = new[]
    {
        new { ID = 1, Name = "Ayush Pothal", Age = 22, Course = "Computer Science" },
        new { ID = 2, Name = "Swagat Sahu", Age = 21, Course = "Information Technology" },
        new { ID = 3, Name = "Subhasish Sahu", Age = 22, Course = "Electronics" },
        new { ID = 4, Name = "Swayam Panda", Age = 21, Course = "Electrical" }
    };
}

<h2>Student Information Form</h2>
<form method="post">
    <label for="studentId">Student ID:</label>
    <input type="text" id="studentId" name="studentId" />
    <br />
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" />
    <br />
    <label for="age">Age:</label>
    <input type="text" id="age" name="age" />
    <br />
    <label for="course">Course:</label>
    <input type="text" id="course" name="course" />
    <br />
    <input type="submit" value="Submit" />
    <br />
</form>

<h2>Student Database</h2>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Age</th>
        <th>Course</th>
    </tr>
    @foreach (var student in students)
    {
        <tr>
            <td>@student.ID</td>
            <td>@student.Name</td>
            <td>@student.Age</td>
            <td>@student.Course</td>
        </tr>
    }
</table>

@{
    <style>
          body {
              font-family: 'Arial', sans-serif;
              line-height: 1.6;
          }

          h2 {
              color: #333;
          }

          form {
              margin-bottom: 20px;
              padding: 15px;
              border: 1px solid #ccc;
              border-radius: 5px;
          }

          label {
              display: block;
              margin-bottom: 5px;
          }

          input[type="text"],
          input[type="submit"] {
              width: 50%;
              padding: 10px;
              margin-bottom: 10px;
              border: 1px solid #ccc;
              border-radius: 3px;
          }

          input[type="submit"] {
              background-color: #5cb85c;
              color: white;
              cursor: pointer;
          }

              input[type="submit"]:hover {
                  background-color: #4cae4c;
              }

          table {
              width: 100%;
              border-collapse: collapse;
              margin-top: 20px;
          }

          table, th, td {
              border: 1px solid #ccc;
          }

          th {
              background-color: #f4f4f4;
              padding: 10px;
              text-align: left;
          }

          td {
              padding: 10px;
              text-align: left;
          }

          tr:nth-child(even) {
              background-color: #f9f9f9;
          }
    </style>
}
