@{
    ViewData["Title"] = "Home Page";
}

@section Styles { 
    <link href="~/Content/Navbar.styles.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/Dashboard.styles.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/Profile.styles.css" type="text/css" rel="stylesheet" />

}

<div class="container">
    <aside class="sidebar">
        <nav class="navbar">
            <ul class="navbar-list">
                <li class="list-item"><img src="~/images/Home.svg" alt="" /></li>
                <li class="list-item"><img src="~/images/activity.svg" alt="" /></li>
                <li class="list-item"><img src="~/images//Exercise.svg" alt="" /></li>
                <li class="list-item"><img src="~/images/messages.svg" alt="" /></li>
                <li class="list-item"><img src="~/images/discover.svg" alt="" /></li>
                <li class="list-item"><img src="~/images/setting.svg" alt="" /></li>
            </ul>
        </nav>
    </aside>

    <div class="dashboard-container">
       <h1><span>Good Morning</span> Welcome Back 🎉</h1>

       <div class="health-track">
            <div class="card card-1">
                <div><img src="~/images/wallet.svg" alt="" /><span>Steps</span></div>
                <p><span class="steps">2500</span> Steps</p>
                <div class="progress-bar"><div class="progress-num"></div></div>
                <p>50% of your goals</p>
            </div>

            <div class="card card-2">
                <div>
                    <img src="~/images/wallet.svg" alt="" /><span>Water</span>
                </div>
                <div class="outer-circle">
                     <p id="litres">1.25 Litres</p>
              
                     <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="8rem" height="8rem"> 
                         <circle cx="64" cy="64" r="53" stroke-linecap="round" /> 
                     </svg>
                </div>
            </div>

            <div class="card card-3">
                <img src="~/images/wallet.svg" alt="" /> <span>Calories</span>
                <div class="outer-circle">
                    <p id="litres">1.25 Litres</p>

                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="8rem" height="8rem">
                        <circle cx="64" cy="64" r="53" stroke-linecap="round" />
                    </svg>
                </div>
            </div>

            <div class="card card-4">
                <img src="~/images/wallet.svg" alt="" />
                <p><span class="steps">2500</span> Steps</p>
                <div class="progress-bar"><div class="progress-num"></div></div>
                <p>50% of your goals</p>
            </div>
       </div>

       <div class="progress-report-container">
           <div>
               <h1>Progress</h1>
               <div class="progress-report-bar"></div>
           </div>
           <div>
               <div class="progress-report-stats">
                    <div class="activities">
                        <div class="dot"></div>
                        <p>Cardio</p>
                    </div>

                    <div class="activities">
                        <div class="dot"></div>
                        <p>Stretching</p>
                    </div>

                    <div class="activities">
                        <div class="dot"></div>
                        <p>Threadmill</p>
                    </div>

                    <div class="activities">
                        <div class="dot"></div>
                        <p>Strength</p>
                    </div>
               </div>
           </div>
       </div>
    </div>
    <div class="profile-section">
        <div class="avatar-container">
            <img src="~/images/Avatar.svg" />
            <h3>Alex John</h3>
        </div>

        <div class="avatar-details">
            <p>
                <span>75</span>kg
                <span>Weight</span>    
            </p>
            <p>
                <span>6.5</span>
                <span>Height</span>
            </p>
            <p>
                <span>25</span>yrs
                <span>Age</span>
            </p>
        </div>

        <div class="goals-container">
            <p>Your Goals</p>
            <div class="goal">
                <div class="goal-avatar">
                    <img src="~/images/run.svg" />
                </div>

                <div class="goal-stats">
                    <p>Running</p>
                    <p>70km/80km</p>
                </div>

                <div class="ring">
                    <p>79%</p>
                </div>
            </div>
            <div class="goal">
                <div class="goal-avatar">
                    <img src="~/images/sleep.svg" />
                </div>

                <div class="goal-stats">
                    <p>Sleeping</p>
                    <p>50hrs/60hrs</p>
                </div>

                <div class="ring">
                    <p>60%</p>
                </div>
            </div>
            <div class="goal">
                <div class="goal-avatar">
                    <img src="~/images/fire.svg" />
                </div>

                <div class="goal-stats">
                    <p>Weight Loss</p>
                    <p>70kg/100kg</p>
                </div>

                <div class="ring">
                    <p>60%</p>
                </div>
            </div>
        </div>
    </div>
</div>

